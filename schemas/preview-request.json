{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Preview Request",
  "type": "object",
  "required": ["url"],
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "description": "The product URL to fetch preview metadata for"
    },
    "raw_html": {
      "type": "string",
      "description": "Optional raw HTML content if already fetched"
    }
  },
  "additionalProperties": false
}
